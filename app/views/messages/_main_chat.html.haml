.Main
  .Main__header
    .Main__header__left
      .Main__header__left__top
        = @group.name
      .Main__header__left__bottom
        - @group.users.each do |user|
          .name
            =user.name
    = link_to 'Edit', edit_group_path(@group), class: 'Main__header__righttop' 
    
  .Main__message_list
    %article.messages
      = render @messages        

  .Main__footer
    = form_with model: [@group, @message], html: {class: "Main__footer__form"}, local: true do |f|
      .Main__footer__form__box
        = f.text_field :content, class: "Main__footer__form__box__text" , placeholder: "type a message"
        = f.label :image, class: "Main__footer__form__box__image" do
          = icon('far' , 'image', class: 'Main__footer__form__box__image')
          = f.file_field :image, class: "Main__footer__form__box__image--file"
      = f.submit 'Send', class: "Main__footer__form__box__submit-btn"


.Side_bar
  .Side_bar__user_name
    .Side_bar__user_name__list
      .Side_bar__user_name__list__username
        = current_user.name
      .Side_bar__user_name__list__icon
        .Side_bar__user_name__list__icon__icon1
          = link_to new_group_path , class: "Side_bar__user_name__list__icon__icon1" do
            = icon('fas' , 'edit')
        .Side_bar__user_name__list__icon__icon2
          = link_to  edit_user_path(current_user), class: "Side_bar__user_name__list__icon__icon2" do
            = icon('fas' , 'cog')
  .Side_bar__group
    - current_user.groups.each do |group|
      .Side_bar__group__box
        = link_to group_messages_path(group) do
          .Side_bar__group__box__groupname
            = group.name
          .Side_bar__group__box__message
            = group.show_last_message
    
  
  

